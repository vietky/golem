# Environment variables for Golem Century Game Server
# Copy this file to .env and fill in your actual values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB=golem_game
MONGO_USER=
MONGO_PASSWORD=

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Game Configuration
MAX_PLAYERS=5
CARAVAN_CAPACITY=10
POINT_CARDS_TO_WIN=5
COPPER_TOKEN_POINTS=3
SILVER_TOKEN_POINTS=1

# Security Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ENABLED=false
SESSION_TOKEN_LIFETIME=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text

# CI/CD Configuration
# Jenkins Configuration
JENKINS_URL=http://157.66.101.66:8080
JENKINS_USER=admin
JENKINS_TOKEN=
JENKINS_JOB_NAME=golem-century-deploy

# Jenkins Home
JENKINS_HOME=/var/jenkins_home
JENKINS_REPOS_DIR=/opt/jenkins/repos
JENKINS_DEPLOY_DIR=/opt/jenkins_deploy

# Application Configuration
APP_NAME=golem-century
APP_DIR=${JENKINS_REPOS_DIR}/golem
APP_PORT=8081
GIT_REPO=https://github.com/vietky/golem.git
GIT_BRANCH=main

# Ansible Configuration
ANSIBLE_HOST=157.66.101.66
ANSIBLE_USER=root
ANSIBLE_SSH_KEY=~/.ssh/id_rsa